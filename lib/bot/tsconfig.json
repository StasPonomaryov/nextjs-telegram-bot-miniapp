{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "ESNEXT",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule":true,
    "esModuleInterop": true,
  },
  "compileOnSave": true,
  "include": ["./**/*.ts"]
}